---
import { FORM_SALT } from "theme";
import Layout from "@/layouts/Layout.astro";
import { rxPage } from "@rxdrag/website-lib-core";
import { rx } from "theme";
import { Meta, Motion } from "@rxdrag/website-lib";
import { ContactForm } from "@rxdrag/website-lib-core";
import Header from "@/components/Header.astro";
import Breadcrumb from "@/components/Breadcrumb.astro";
import Footer from "@/components/Footer.astro";
import Globals from "@/components/Globals.astro";

// 生成面包屑
const breadcrumbs = rxPage.breadcrumbs("Contact us", "Home");
const config = (await rx.getTheme())?.config;
const meta = (await rx.getPageBySlug("contact"))?.meta;---

<Layout>
  <Meta slot="meta" content={meta} />
  <Header />
  <Breadcrumb items={breadcrumbs} title="Contact us" bgUrl="https://yizhanfei-prod1.oss-accelerate.aliyuncs.com/4299262263298/4d237358-8de9-4686-a7ef-48b10f0bf35a.jpg" />
  <section class="container article gap-28">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-2">
      <Motion class="flex flex-col gap-10 p-10 justify-center bg-primary dark text-foreground relative bg-gradient-to-b from-[#01175e] to-[#0423ab]" whileInView="fade-left">
        <h2 class="text-9xl font-semibold w-full absolute bottom-0 -right-40 opacity-5 hidden md:block">
          Coendia
        </h2>
        <p class="text-6xl font-[100]">
          Contact us
        </p>
        <ul class="text-base flex flex-col gap-6">
          <li class="flex flex-col items-start gap-2">
            <span class="font-mono">
              Contact
            </span>
            <span>
              {config?.contact}
            </span>
          </li>
          <li class="flex flex-col items-start">
            <span class={true}>
              Tel:
            </span>
            <span>
              {config?.tel}
            </span>
          </li>
          <li class="flex flex-col items-start gap-2">
            <span class={true}>
              Email:
            </span>
            <span>
              {config?.email}
            </span>
          </li>
          <li class="flex flex-col items-start gap-2">
            <span class={true}>
              Address:
            </span>
            <span>
              {config?.address}
            </span>
          </li>
        </ul>
      </Motion>
      <Motion class="border-2 p-10" whileInView="fade-right">
        <ContactForm submitAlign="right" formSalt={FORM_SALT} labels={{
            name: "Your Name",
            email: "Your Email",
            mobile: "Tel or Whatsapp",
            company: "Company",
            message: "Message",
            submit: "Send Message",
          }} classNames={{
            submit: "btn-primary font-mono uppercase",
          }} client:load />
      </Motion>
    </div>
    <Motion whileInView="fade-up">
      <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3404.88189316778!2d120.96660507473311!3d31.417379974261298!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x35b24c1236ace05f%3A0xe1518cda85313965!2sHan%20Pu%20Lu%2C%20Kun%20Shan%20Shi%2C%20Su%20Zhou%20Shi%2C%20Jiang%20Su%20Sheng%2C%20China!5e0!3m2!1sen!2sus!4v1756108152949!5m2!1sen!2sus" width="100%" height="550" allowfullscreen={true} loading="lazy" referrerpolicy="no-referrer-when-downgrade" />
    </Motion>
  </section>
  <Footer />
  <Globals />
</Layout>