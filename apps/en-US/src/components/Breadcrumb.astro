---
import { Motion, Link } from "@rxdrag/website-lib";

interface Props {
  title?: string;
  separator?: string;
  items?: TBreadcrumbItem[];
  bgUrl?: string;
}
const { separator = ">", title, items = [], bgUrl ="https://yizhanfei-prod1.oss-accelerate.aliyuncs.com/4299262263298/6c3093b7-9336-4349-ac2a-c748277466ba.jpg" } = Astro.props;---

<section class="relative flex pt-8 bg-primary dark h-[400px]">
{
    bgUrl &&   <img src={bgUrl} alt="breadcrumb-bg" class="absolute top-0 left-0 w-full h-full z-0" />
  }
  <div class="absolute top-0 left-0 w-full h-full bg-black/10 z-0" />
  <Motion class="container flex flex-col justify-center uppercase z-10" whileInView="fade-left">
    <h1 class="text-4xl font-bold text-foreground-primary">
      {title}
    </h1>
    <ul class="flex items-center space-x-2 text-base py-4">
{
        items.map((item, index) => (<>
        <li class="breadcrumb-item">
        {
        item.href ? (<Link to={item.href}>
        {item.title}
        </Link>) : (<span class="text-foreground-primary">
        {item.title}
        </span>)
        }
        </li>
        {
        index < items.length - 1 &&           <li class="breadcrumb-separator">
        {separator}
        </li>
        }
        </>))
      }
    </ul>
  </Motion>
</section>