---
import Layout from "@/layouts/Layout.astro";
import { rx } from "theme";
import { Meta } from "@rxdrag/website-lib";
import Header from "@/components/Header.astro";
import HomeHero from "@/components/HomeHero.astro";
import HomeSolutions from "@/components/HomeSolutions.astro";
import HomeTechniques from "@/components/HomeTechniques.astro";
import HomeAbout from "@/components/HomeAbout.astro";
import HomeFlows from "@/components/HomeFlows.astro";
import LastedPosts from "@/components/LastedPosts.astro";
import CtaBlock from "@/components/CtaBlock.astro";
import Footer from "@/components/Footer.astro";
import MiniFloat from "@/components/MiniFloat.astro";
import Globals from "@/components/Globals.astro";
const page = await rx.getHomePage();
const meta = page?.meta;---

<Layout>
  <Meta slot="meta" content={meta} />
  <Header />
  <HomeHero title="将医疗进步带到最需要的地方——Coendia" subtitle="为世界每个角落提供创新与关怀" ctaTitle="立即咨询" backgroundImage="/images/hero-bg.jpg" />
  <HomeSolutions />
  <HomeTechniques />
  <HomeAbout />
  <HomeFlows />
  <LastedPosts title="最新文章" subtitle="医学内窥镜领域的洞见与创新" detailTitle="了解更多" count={4} />
  <CtaBlock />
  <Footer />
  <MiniFloat />
  <Globals />
</Layout>