---
import { Motion } from "@rxdrag/website-lib";
interface Props {
  reverse?: boolean;
  src?: string;
  title?: string;
  sub_title?: string;
}
const { reverse = false, src, title, sub_title } = Astro.props;---

<div class="grid lg:grid-cols-2 gap-16">
  <Motion
    class={`lg:aspect-[4/3] ${reverse ? "lg:order-2" : "lg:order-1"}`}
    whileInView={reverse ? "fade-right" : "fade-left"}
  >
    <img src={src} class="object-cover w-full h-full" alt={title || ""} />
  </Motion>
  <Motion
    class={`lg:aspect-[4/3] flex flex-col justify-center lg:gap-10 gap-6 ${reverse ? "order-1" : "order-2"}`}
    whileInView={reverse ? "fade-left" : "fade-right"}
  >
    <h3 class="text-left text-3xl" data-animation="fade-up">{title}</h3>
    <p class="text-left text-lg" data-animation="fade-up">{sub_title}</p>
    <span class="w-16 h-2 bg-primary"></span>
  </Motion>
</div>